.weather_page .wea_hd {
  position: relative;
  width: 100%;
  height: 764rpx;
}
.weather_page .wea_hd .wea_hd_img {
  position: absolute;
  left: 0;
  top: 0;
}
.weather_page .wea_hd .wea_pos {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
  height: 120rpx;
  display: flex;
  padding: 0 40rpx;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}
.weather_page .wea_hd .wea_pos .wea_pos_city {
  font-size: 50rpx;
}
.weather_page .wea_hd .wea_pos .wea_pos_city .iconfont {
  font-size: 44rpx;
}
.weather_page .wea_hd .today_wea {
  width: 100%;
  position: absolute;
  left: 0;
  top: 220rpx;
  padding: 0 40rpx;
  color: #fff;
}
.weather_page .wea_hd .today_wea .today_temp {
  font-size: 100rpx;
  font-weight: 600;
}
.weather_page .wea_hd .today_wea .today_condition {
  margin-top: 40rpx;
  font-size: 40rpx;
}
.weather_page .wea_hd .today_wind_wrap {
  width: 100%;
  height: 120rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  color: #fff;
  display: flex;
  align-items: center;
  z-index: 9;
}
.weather_page .wea_hd .today_wind_wrap .today_wind_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.weather_page .three_wrap {
  width: 100%;
  height: 470rpx;
  border-bottom: 20rpx solid #fefefe;
}
.weather_page .three_wrap .three_item {
  width: 100%;
  height: 150rpx;
  padding: 0 40rpx;
  border-bottom: 1px solid #aacaf1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #4ec2e2;
}
