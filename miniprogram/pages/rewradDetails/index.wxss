.re_title {
  width: 100%;
  height: 100rpx;
  background-color: #25dbe6;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  border-bottom: 1rpx solid #ccc;
  color: #fff;
  font-weight: 650;
}
.re_content {
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #efefef;
}
.re_content .re_item {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}
.re_content .re_item .re_item_hd {
  width: 100%;
  height: 90rpx;
  border-radius: 20rpx;
  background-color: #fff;
  color: #111;
  font-size: 34rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}
.re_content .re_item .re_item_bd {
  width: 90%;
  min-height: 120rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  background-color: #bbb;
  margin-bottom: 60rpx;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
