.index_header {
  background-color: #25dbe6;
  display: flex;
  justify-content: space-between;
}
.index_header .index_weather {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.index_header .index_weather .weather_temperature_wrap {
  width: 100%;
}
.index_header .index_weather .weather_temperature_wrap .weather_temperature {
  color: #fff;
  font-weight: 600;
  font-size: 36rpx;
  margin-right: 8rpx;
}
.index_header .index_weather .weather_site {
  font-size: 24rpx;
  color: #fff;
}
.index_header .index_search {
  flex: 7;
  height: 70rpx;
  display: flex;
  justify-content: flex-end;
}
.index_header .index_search .index_search_wrap {
  padding: 0 12rpx;
  width: 100%;
  height: 70rpx;
}
.index_swiper {
  position: relative;
  width: 100%;
  height: 200rpx;
  background-color: #25dbe6;
  border-bottom-right-radius: 70rpx;
  border-bottom-left-radius: 70rpx;
  margin-bottom: 150rpx;
}
.index_swiper .index_swiper_wrap {
  position: absolute;
  left: 50%;
  top: 30rpx;
  transform: translateX(-50%);
  width: 90%;
}
.index_swiper .index_swiper_wrap swiper {
  width: 100%;
  height: 36vw;
}
.index_swiper .index_swiper_wrap swiper swiper-item {
  width: 100%;
  height: 36vw;
  border-radius: 20rpx;
  overflow: hidden;
}
.index_swiper .index_swiper_wrap swiper swiper-item navigator {
  width: 100%;
  height: 100%;
}
.index_swiper .index_swiper_wrap swiper swiper-item navigator .sw_img {
  width: 100%;
}
.index_nav {
  display: flex;
}
.index_nav navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.index_nav navigator .iconfont {
  font-size: 38rpx;
}
.index_nav navigator .nav_txt {
  font-size: 28rpx;
}
