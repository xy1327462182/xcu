page {
  padding: 0 20rpx;
}
page .pGoods_hd {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  margin: 5rpx 0 20rpx 0;
}
page .pGoods_hd .cancel {
  width: 120rpx;
  font-size: 34rpx;
}
page .pGoods_hd .p_title {
  font-size: 40rpx;
  font-weight: 700;
}
page .pGoods_hd .p_publish {
  width: 150rpx;
  height: 65rpx;
  border-radius: 35rpx;
  background-color: #ffe224;
  opacity: 0.7;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 550;
}
page .p_txt_wrap {
  width: 100%;
}
page .p_txt_wrap .p_txt_content {
  width: 100%;
  height: 300rpx;
}
page .p_imgs_wrap {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
}
page .p_imgs_wrap .img_item {
  position: relative;
  width: 230rpx;
  height: 230rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.18);
  margin: 5rpx 0;
}
page .p_imgs_wrap .img_item:nth-child(3n-1) {
  margin-left: 10rpx;
  margin-right: 10rpx;
}
page .p_imgs_wrap .img_item .goods_img {
  width: 100%;
  height: 100%;
}
page .p_imgs_wrap .img_item .del_btn {
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  background: rgba(0, 0, 0, 0.38);
  border-bottom-left-radius: 8rpx;
}
page .p_imgs_wrap .img_item .add_pics {
  width: 100%;
  height: 100%;
  font-size: 140rpx;
  color: rgba(0, 0, 0, 0.48);
  text-align: center;
  line-height: 230rpx;
}
page .shippings_address {
  display: inline-block;
  line-height: 50rpx;
  height: 50rpx;
  padding: 0 22rpx;
  border-radius: 25rpx;
  background: rgba(0, 0, 0, 0.06);
  color: rgba(0, 0, 0, 0.38);
  font-size: 32rpx;
  margin: 40rpx 0;
}
page .info_wrap_btm {
  width: 100%;
  border-top: 1rpx solid #ddd;
  margin: 50rpx 0 160rpx;
}
page .info_wrap_btm .info_item {
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
page .info_wrap_btm .info_item .info_item_ico {
  font-size: 48rpx;
  color: rgba(0, 0, 0, 0.38);
}
page .info_wrap_btm .info_item .info_item_content {
  width: 80%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
page .info_wrap_btm .info_item .info_item_content .info_item_content_name {
  font-size: 32rpx;
}
page .info_wrap_btm .info_item .info_item_content .info_item_content_txt {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.4);
}
page .info_wrap_btm .info_item .info_item_arrow {
  font-size: 36rpx;
  color: rgba(0, 0, 0, 0.38);
}
page .info_wrap_btm .notes_box .info_item_ico {
  font-size: 44rpx;
}
